# Server Configuration
PORT=3000
NODE_ENV=development

# Claude AI API Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here

# Email Monitoring Configuration (for receiving resumes via email)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=recruiting@yourcompany.com
EMAIL_PASSWORD=your_email_app_password_here
EMAIL_CHECK_INTERVAL=60000

# Email Notification Configuration (for sending alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@yourcompany.com
SMTP_PASSWORD=your_smtp_password_here
NOTIFICATION_FROM=recruiting@yourcompany.com
NOTIFICATION_TO=hr@yourcompany.com

# Match Score Threshold for Notifications (0-100)
NOTIFICATION_THRESHOLD=70

# Application Settings
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.txt,.jpg,.jpeg,.png

# Geographic Distance Calculator Configuration
# Optional: Get free API key from https://opencagedata.com/api (2500 requests/day free)
# If not provided, will use Nominatim (OpenStreetMap) with 1 request/second rate limit
OPENCAGE_API_KEY=
